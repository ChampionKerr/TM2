{
  "name": "timewise-hrms",
  "version": "1.0.0",
  "description": "TimeWise HRMS - Professional Leave Management System",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest -c jest.config.node.js && jest -c jest.config.react.js",
    "test:api": "jest -c jest.config.node.js",
    "test:react": "jest -c jest.config.react.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset --force && npm run prisma:seed",
    "db:setup": "prisma generate && prisma db push && npm run prisma:seed",
    "docs:build": "echo 'API docs available at /api-docs endpoint'",
    "validate": "tsc --noEmit && eslint . && prettier --check .",
    "format": "prettier --write .",
    "analyze": "ANALYZE=true npm run build",
    "health-check": "tsx scripts/health-check.ts",
    "production:setup": "npm ci && npm run prisma:migrate:prod && npm run prisma:seed && npm run build",
    "production:start": "npm run health-check && npm start",
    "security:audit": "npm audit --audit-level high",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^5.18.0",
    "@mui/material": "^5.18.0",
    "@mui/x-date-pickers": "^8.11.2",
    "@prisma/client": "^6.16.0",
    "@react-email/components": "^0.5.3",
    "@react-email/render": "^1.2.3",
    "@types/nodemailer": "^7.0.1",
    "@upstash/redis": "^1.35.3",
    "bcryptjs": "^3.0.2",
    "core-js": "^3.38.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "next": "^14.2.33",
    "next-auth": "^4.24.5",
    "nodemailer": "^6.10.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "resend": "^6.0.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/plugin-syntax-import-attributes": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.28.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "babel-jest": "^30.1.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.13",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "node-fetch": "^2.7.0",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "sharp": "^0.34.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
}
