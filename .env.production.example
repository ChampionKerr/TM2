# Production Environment Variables for TimeWise HRMS

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://timewise-hrms.vercel.app

# Database (PostgreSQL with SSL)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require&connection_limit=10&pool_timeout=20"

# NextAuth Configuration
NEXTAUTH_SECRET="your-super-secure-secret-key-min-32-chars-change-in-production"
NEXTAUTH_URL="https://timewise-hrms.vercel.app"

# Email Service (Resend - Production)
RESEND_API_KEY="re_your_production_resend_api_key"
RESEND_FROM_EMAIL="noreply@timewise-hrms.com"

# Security & Performance
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Optional: Redis for Caching (Production)
REDIS_URL="redis://username:password@host:port"

# Optional: Error Tracking
SENTRY_DSN="https://your-sentry-dsn-here"

# Optional: Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Feature Flags
MAINTENANCE_MODE=false
DEBUG_MODE=false